<p id="notice"><%= notice %></p>

<h1>Listing Memories</h1>

<table>
  <thead>
    <tr>
      <th>Manufacturer</th>
      <th>Part no</th>
      <th>Speed</th>
      <th>Size</th>
      <th>Price/gb</th>
      <th>Cas</th>
      <th>Voltage</th>
      <th>Heat</th>
      <th>Spreader</th>
      <th>Ecc</th>
      <th>Registered</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memories.each do |memory| %>
      <tr>
        <td><%= memory.manufacturer %></td>
        <td><%= memory.part_no %></td>
        <td><%= memory.speed %></td>
        <td><%= memory.size %></td>
        <td><%= memory.price_gb %></td>
        <td><%= memory.cas %></td>
        <td><%= memory.voltage %></td>
        <td><%= memory.heat %></td>
        <td><%= memory.spreader %></td>
        <td><%= memory.ecc %></td>
        <td><%= memory.registered %></td>
        <td><%= memory.color %></td>
        <td><%= link_to 'Show', memory %></td>
        <td><%= link_to 'Edit', edit_memory_path(memory) %></td>
        <td><%= link_to 'Destroy', memory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

