						<div class="row">
							<form action="search">
							  <div class="form-group">
							    <label for="exampleInputEmail1">Search</label>
							    <%= text_field_tag("search",@search_key,
								                   :class => 'autocomplete-input form-control',
								                   :autocomplete => 'on',
								                   :placeholder  => 'Search ..',
								                   :'data-url'   => "search/auto_complete_search")
								%>
							  </div>
							  <button type="submit" class="btn btn-default">Search</button>
							</form>
						</div>

<h2>Search Result for "<%= @search_key%>"</h2>

<ul>
<% @items.each do |item|%>
		
	<li><%= link_to item.product, eval("#{item.class.name.underscore.downcase.pluralize}_path(#{item.id})")%></li>
<% end %>
</ul>
